  <h1>ðŸ“¢ School WhatsApp Outreach</h1>
  <p id="trial-status">Checking trial status...</p>

  <!-- TRIAL EXPIRED MESSAGE -->
  <div id="lockedMessage" class="locked-message" style="display: none;">
    â›” Your 3-day trial has expired.<br>
    Please <a href="https://wa.me/233XXXXXXXXX" target="_blank">contact support</a> to upgrade and unlock full access.
  </div>

  <!-- MESSAGE FORM -->
  <form id="whatsappForm" onsubmit="sendMessage(); return false;">
    <input type="text" id="school" placeholder="School Name" required>
    <select id="type" required>
      <option value="">Select Message Type</option>
      <option>Ad</option>
      <option>Announcement</option>
      <option>Invitation</option>
    </select>
    <textarea id="message" rows="5" placeholder="Your message..." required></textarea>
    <input type="text" id="number" placeholder="WhatsApp Number (without +)" required>
    <button type="submit" id="sendBtn">Send via WhatsApp</button>
    <div class="note">* Trial lasts for 3 days from first visit. Upgrade to continue.</div>
  </form>

  <script>
    function checkTrial() {
      const start = localStorage.getItem('trialStart');
      const now = new Date();

      if (!start) {
        localStorage.setItem('trialStart', now.toISOString());
        document.getElementById('trial-status').textContent = "âœ… Trial started: Day 1 of 3";
        return true;
      }

      const startDate = new Date(start);
      const diff = Math.floor((now - startDate) / (1000 * 60 * 60 * 24));

      if (diff < 3) {
        document.getElementById('trial-status').textContent = `âœ… Trial active: Day ${diff + 1} of 3`;
        return true;
      } else {
        // Trial expired
        document.getElementById('trial-status').textContent = "â›” Trial expired";
        document.getElementById('whatsappForm').style.display = "none";
        document.getElementById('lockedMessage').style.display = "block";
        return false;
      }
    }

    function sendMessage() {
      if (!checkTrial()) {
        alert("Trial expired. Please contact us to upgrade.");
        return;
      }

      const school = document.getElementById('school').value;
      const type = document.getElementById('type').value;
      const message = document.getElementById('message').value;
      const number = document.getElementById('number').value;

      const fullMessage = `ðŸ“£ [${school}] - ${type}\n\n${message}`;
      const encoded = encodeURIComponent(fullMessage);
      const whatsappURL = `https://wa.me/${number}?text=${encoded}`;

      window.open(whatsappURL, '_blank');
    }

    // Run on page load
    checkTrial();
  </script>
</body>
