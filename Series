<div id="clock" style="font-size: 20px; font-weight: bold; margin-top: 20px;"></div>

<script>
  function updateClock() {
    const now = new Date();
    const time = now.toLocaleTimeString();
    document.getElementById('clock').innerText = 'ðŸ•’ ' + time;
  }

  setInterval(updateClock, 1000);
  updateClock(); // Call it once to show immediately
</script>
